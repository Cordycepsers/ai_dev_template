# AI API Keys
# Get these from your respective AI providers
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Budget & Usage Tracking
MONTHLY_BUDGET_LIMIT=100
USAGE_ALERT_THRESHOLD=0.8
TRACK_TOKEN_USAGE=true

# Development Environment
NODE_ENV=development
PYTHON_ENV=development

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Project Configuration
PROJECT_NAME=my-ai-project
PROJECT_VERSION=1.0.0

# Database (if needed)
DATABASE_URL=sqlite:///./dev.db

# Testing
PYTEST_ARGS=--verbose --cov=src --cov-report=html

# Conda Environment Name
CONDA_ENV_NAME=ai-dev-env

# VS Code Settings
VSCODE_WORKSPACE_TRUST=true

# GitHub Configuration (for automation)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=your-username/your-repo

# Docker Registry (if using)
DOCKER_REGISTRY=your-registry-url
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password

# Cloud Provider Settings (optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
GCP_PROJECT_ID=your-gcp-project
AZURE_SUBSCRIPTION_ID=your-azure-subscription

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_DEBUG=false

# ADHD-Friendly Settings
POMODORO_DURATION=25
BREAK_DURATION=5
DAILY_TASK_LIMIT=5
ENABLE_PROGRESS_SOUNDS=true

